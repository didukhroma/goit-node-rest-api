{
  "name": "goit-node-rest-api",
  "type": "module",
  "homepage": "https://didukhroma.github.io/goit-node-rest-api",
  "scripts": {
    "start": "node --env-file=.env ./app.js",
    "dev": "nodemon --env-file=.env ./app.js",
    "prepare": "husky",
    "lint": "biome check --files-ignore-unknown=true",
    "lint:fix": "biome check --write --no-errors-on-unmatched"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.0.2"
  },
  "lint-staged": {
    "**/*.{html,md,css,js,json}": ["npm run lint:fix"]
  }
}
